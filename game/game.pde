*/
void setup() {
  
  size(600, 600);
  
  frameRate(120);
  textSize(30);
  textAlign(CENTER, CENTER);
  
  s1 = new StoppingSpike(width/2, height/2, 20, 'u');
}

/*
======================================================================
                             draw()関数
======================================================================
*/
void draw() {
  
  background(255);
  
  s1.display();
  
}

